<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="57dp"
        android:text="Select a Robot to Move:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30dp" />

    <RadioGroup
        android:id="@+id/radioBot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/message"
        android:layout_marginLeft="67dp"
        android:layout_toRightOf="@+id/message" >

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Robot 1"
            android:textSize="25dp" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Robot 2"
            android:textSize="25dp" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Robot 3"
            android:textSize="25dp" />

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Robot 4"
            android:textSize="25dp" />

        <RadioButton
            android:id="@+id/radioButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="All Robots"
            android:textSize="25dp" />
    </RadioGroup>

    <Button
        android:id="@+id/RightArrowButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/message"
        android:layout_marginBottom="132dp"
        android:layout_marginRight="58dp"
        android:background="@drawable/arrow_right" />

    <Button
        android:id="@+id/LeftArrowButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/RightArrowButton"
        android:layout_alignBottom="@+id/RightArrowButton"
        android:layout_toLeftOf="@+id/RightArrowButton"
        android:background="@drawable/arrow_left" />

    <Button
        android:id="@+id/DownArrowButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/message"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="53dp"
        android:layout_marginLeft="33dp"
        android:background="@drawable/arrow_down" />

    <Button
        android:id="@+id/UpArrowButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/DownArrowButton"
        android:layout_alignLeft="@+id/DownArrowButton"
        android:background="@drawable/arrow_up" />

    <Button
        android:id="@+id/LaserButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/UpArrowButton"
        android:layout_alignBottom="@+id/UpArrowButton"
        android:layout_alignParentRight="true"
        android:layout_marginRight="65dp"
        android:background="@drawable/laser_button" />

    <Button
        android:id="@+id/DanceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LaserButton"
        android:layout_toLeftOf="@+id/LaserButton"
        android:background="@drawable/dance_button" />

</RelativeLayout>